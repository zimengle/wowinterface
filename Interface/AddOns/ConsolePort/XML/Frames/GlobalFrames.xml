					<Anchor point="BOTTOM" relativeTo="ConsolePortMouseHandle" x="0" y="6"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="TopArrow" inherits="HelpPlateArrowUP">
							<Size x="53" y="17"/>
							<Anchors>
